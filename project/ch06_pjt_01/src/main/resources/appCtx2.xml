	<!-- 실제 서비스용 데이터 베이스 빈 생성 -->
	<bean id="real_DBConnectionInfo" class="ch06_pjt_01.ems.member.DBConnectionInfo">
		<property name="url" value="111.111.111.111" />
		<property name="userId" value="master" />
